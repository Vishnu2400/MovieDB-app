extends layout

block content
  .confirm-delete
    h1= title
    p Are you sure you want to delete the following Movie?
    hr
    form.confirm-delete-form(method='POST' action=`/movies/${movie.id}/delete`)
      button.btn.btn-danger(type='submit') Confirm Delete
      | 
      a.btn.btn-secondary(href=`/movies/${movie.id}`) Cancel
